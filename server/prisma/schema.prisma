generator client {
  provider = "prisma-client-js"
   
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Category {
  APARTMENT
  VILLA
  STUDIO
  HOSTEL
  HOUSE
  PG
  CITY
}


model User{
  id       String @id @default(uuid())
  username String
  password String
  listings Listing[]
  reviews  Review[]
  email String @unique
}

model Listing {
  id          String @id @default(uuid())
  title       String
  description String
  price       Float
  location    String
  image       String?
  // category    Category   @default(CITY)
  userId      String
  reviews     Review[]
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
}

model Review {
  id         String @id @default(uuid())
  rating     Int
  comment    String
  createdAt  DateTime @default(now())
  userId     String
  listingId  String
  user       User     @relation(fields: [userId], references: [id] , onDelete: Cascade)
  listing    Listing  @relation(fields: [listingId], references: [id] , onDelete: Cascade)
}

